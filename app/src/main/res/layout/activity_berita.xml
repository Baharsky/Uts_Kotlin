<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeritaActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:text="Input Berita"
        android:textSize="35sp"
        android:textColor="#fff"
        android:fontFamily="@font/clean"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/back_log"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editTextJudul"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Judul Berita"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"
            android:background="@drawable/kolom"/>

        <EditText
            android:id="@+id/editTextWaktu"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Waktu Berita"
            android:layout_marginTop="20dp"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"
            android:background="@drawable/kolom"/>

        <EditText
            android:id="@+id/editTextPenulis"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Penulis Berita"
            android:layout_marginTop="20dp"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"
            android:background="@drawable/kolom"/>

        <EditText
            android:id="@+id/editTextIsi"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Isi Berita"
            android:layout_marginTop="20dp"
            android:textColorHint="#c8d6e5"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textAlignment="center"
            android:background="@drawable/kolom"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Simpan"
            android:background="@drawable/login_but"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>